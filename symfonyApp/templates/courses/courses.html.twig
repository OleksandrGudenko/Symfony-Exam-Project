{% extends 'base.html.twig' %}

{% block main %}

    <div class="main" align="center">

        <h3>Courses</h3>
        <br>
        <table class="table table-hover table-sm">
            <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">View Exams</th>
                {% if user.teacher %}
                <th scope="col">View Questions</th>
                {% endif %}
            </tr>
            </thead>
            {% for course in listData %}
                <tbody>
                <tr>
                    <td scope="row">{{ course.id }}</td>
                    <td>{{ course.name }} </td>
                    <td><a  href="/courses/exams/{{ course.id }}" class="btn btn-primary" role="button">View Exams</a></td>
                    {% if user.teacher %}
                    <td><a href="/courses/questions/{{ course.id }}" class="btn btn-primary" role="button">View Questions</a></td>
                    {% endif %}
                </tr>
                </tbody>
            {% endfor %}
        </table>
    </div>


{% endblock %}
