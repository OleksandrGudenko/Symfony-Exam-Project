{% extends 'base.html.twig' %}


{% block main %}


    <div class="main"  align="center">

        {% if user.teacher %}
            <a href="/courses/question/add/{{ courseId }}" role="button" style="float:left; width:22%; margin-top:1%; margin-left:1%; margin-right:-26%;" class="btn btn-success">Add New Question</a>
        {% endif %}
        <h3>Questions</h3>

        <br>
        <table class="table">
            <thead class="thead-dark">
            <th scope="col">ID</th>
            <th scope="col">Course ID</th>
            <th scope="col">Question</th>
            <th scope="col">Edit Question</th>
            <th scope="col">View Answers</th>
            </thead>
            {% for question in listData %}
                <tbody>
                <tr>
                    <td>{{ question.id }}</td>
                    <td>{{ question.course.id }} </td>
                    <td>{{ question.question }}</td>
                    <td><a href="/courses/questions/edit/{{ question.id }}/view" class="btn btn-warning" role="button">Edit Question</a></td>
                    <td><a href="/courses/questions/answers/{{ question.id }}" class="btn btn-primary" role="button">View Answers</a></td>

                </tr>
                </tbody>
            {% endfor %}
        </table>
    </div>


{% endblock %}
