{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/list.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <h1>User List</h1>

    <div>
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Teacher</th>
            </tr>
            </thead>
            <tbody>
            {% for user in listData %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }} </td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{% if user.teacher %}Yes{% else %}No{% endif %}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

    <div>
        <a href="{{ path('logout') }}">Logout</a>
    </div>

{% endblock %}