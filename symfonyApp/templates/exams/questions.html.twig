{% extends 'base.html.twig' %}

{% block main %}

    <h3> Exam Questions </h3>
    <table class="table table-hover table-sm" width="100%">
        <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Question Text</th>
            <th scope="col"> </th>

        </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>
                {{ question.id }}
                </td>
                <td>
                    {{ question.question }}
                </td>
                <td>
                    {% for examQuestion in exam.questions %}
                    {% if examQuestion.id == question.id %}
                        <button>Delete</button>
                    {% else %}
                        <button>Add</button>
                    {% endif %}
                    {%  endfor %}
                </td>
            </tr>

        {% endfor %}
        </tbody>

    </table>

{% endblock %}