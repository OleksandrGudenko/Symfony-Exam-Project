{% extends 'base.html.twig' %}

{% block main %}

    <h3> Exam Questions </h3>
    <table class="table table-hover table-sm" width="100%">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Question Text</th>
            <th scope="col"> </th>

        </tr>
        </thead>
        <tbody>
        {{ exam.id }}
        {% for question in questions %}
            <tr>
                <td>
                    {{ question.id }}
                </td>
                <td>
                    {{ question.question }}
                </td>
                <td>

                {% if question not in examQuestions %}
                    <button exam-id="{{ exam.id }}" question-id="{{ question.id }}" class="addQuestionButton">Add</button>
                {% endif %}
                </td>
            </tr>

        {% endfor %}
        </tbody>

    </table>

{% endblock %}