{% extends 'base.html.twig' %}


{% block main %}
    <div class="main" align="center">
        {% if user.teacher %}
            <button exam-id="{{ exam }}" style="float:right; width:20%; margin-top:1%; margin-right:1%; margin-left:-21%;" class="publishAllButton">Publish to All</button>
        {% endif %}

        <h3>Students</h3>

        <br>
        <table class="table table-hover table-sm">


            <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Publish</th>
            </tr>
            </thead>

            <tbody>
            {% for student in students %}

             {% if student.instances|length == 0 %}
                <tr>
                <td >{{ student.id }}</td>
                <input hidden id={{ student.id }}>
                <td>{{ student.firstname }} </td>
                <td>{{ student.lastname }}</td>
                <td><button exam-id="{{ exam }}" student-id="{{ student.id }}" class="publishButton">Publish</button></td>

            </tr>
            {% endif %}
            {% endfor %}


            </tbody>
        </table>


    </div>

{% endblock %}