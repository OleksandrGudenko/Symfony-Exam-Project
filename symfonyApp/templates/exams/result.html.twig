{% extends 'base.html.twig' %}


{% block main %}


<div class="main" align="center">

    <h3>Result</h3>

    <table class="table table-hover table-sm" width="100%">

        <thead class="thead-dark">
        <tr>
            <th scope="col">Exam</th>
            <th scope="col">Grade</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{ instance.exam.name }}</td>
            <td>{{ instance.grade }}%</td>
        </tr>
        </tbody>

    </table>

    <h3>Answers</h3>

    <table class="table table-hover table-sm" width="100%">

        <thead class="thead-dark">
        <tr>
            <th scope="col">Question</th>
            <th scope="col">Correct Answer</th>
            <th scope="col">Your Answer</th>
        </tr>
        </thead>
        <tbody>
        {% for answer in instance.answers %}
        <tr>
            <td>{{ answer.question.question.question }}</td>
            <td>{{ answer.question.question.correctAnswer.answer }}</td>
            <td>{{ answer.answer.answer }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}