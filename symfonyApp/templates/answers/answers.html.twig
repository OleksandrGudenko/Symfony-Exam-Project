{% extends 'base.html.twig' %}


{% block main %}


    <div class="main"  align="center">

        {% if user.teacher %}
            <a href="/courses/questions/answers/add/{{ questionId }}" role="button" style="float:left; width:22%; margin-top:1%; margin-left:1%; margin-right:-26%;" class="btn btn-success">Add New Answer</a>
        {% endif %}
        <h3>Answers</h3>

        <br>
        <table class="table">
            <thead class="thead-dark">
            <th scope="col">ID</th>
            <th scope="col">Question ID</th>
            <th scope="col">Answer</th>
            <th scope="col">Correct Answer</th>
            <th scope="col">Edit Answer</th>
            </thead>
            {% for answer in listData %}
                <tbody>
                <tr>
                    <td>{{ answer.id }}</td>
                    <td>{{ answer.question.id }} </td>
                    <td>{{ answer.answer }}</td>
                    {% if answer.correctAnswer %}
                        <td>Yes</td>
                    {% else %}
                         <td></td>
                    {% endif %}
                    <td><a href="/courses/questions/answers/edit/{{ answer.id }}/view" class="btn btn-warning" role="button">Edit Answer</a></td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
    </div>


{% endblock %}